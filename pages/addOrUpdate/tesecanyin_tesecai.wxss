/* pages/addOrUpdate/tesecanyin_tesecai.wxss */
page{
  width:100%;
  background:#F5F5F5;
}
.jg{
  width:100%;
  height:82rpx
}
input{
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  float:left;
  
}
.sousuo{
  position: fixed;
  z-index:99;
  top:0rpx;
  background:#F5F5F5;
  border-bottom:#C4C4C4 solid 1px;
  width:100%;
}


.caozuo{
  float:left;
  width:90px;
  height:42px;
  line-height:42px;
  text-align:center
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #ccc;
  width: 100%;
  overflow: hidden
}
.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  margin-left: -180px
}
.content image{
  width:20rpx;
}
.sub_menu{
  width:700rpx;
  padding:10rpx 0rpx 10rpx 50rpx;
  background:#ccc;
  border-bottom: #fff solid 1rpx;
}
.sub_menu_button{
  margin-left:100rpx;
  width:550rpx;
  text-align:center;
  padding:20rpx 0rpx 12rpx 0rpx;
}
.sub_menu_button span{
  padding:10rpx 20rpx 10rpx 20rpx;
  border:red solid 1rpx
}
.subList{
  padding:20rpx 0rpx 12rpx 80rpx;
  border-bottom:1px solid #ccc;
  text-align: left;
}
.del {
  width: 180px;
  display: flex; 
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  /*flex-direction: column;
  background-color: orangered;
  */
}
.touch-move-active .content,
.touch-move-active .del{
  -webkit-transform: translateX(0);
  transform: translateX(0);
}