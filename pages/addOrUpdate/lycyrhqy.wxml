<swiper current="{{view_index}}" bindchange="change_swiper">
  <swiper-item>
    <view class="bg_view">
      <view style="width:100%;height:1020rpx">
        <view class="tr_view" style="height:200rpx" >
          <view class="td_left" style="width:100%">
            <text space="ensp">授予省级产业融合示范基地年份： </text>
            <textarea  placeholder="请输入授予省级产业融合示范基地年份" bindinput="input_value" data-id="year" value="{{year}}" style="height:50%"/>
          </view>
        </view>
        <view class="tr_view" style="height:250rpx" >
          <view class="td_left" style="width:100%">
            <text space="ensp">特色类型： </text>
            <textarea  placeholder="请输入特色类型" bindinput="input_value" data-id="SpecilType" value="{{SpecilType}}"/>
          </view>
        </view>
        <view class="tr_view" >
          <view class="td_left"><text space="ensp">客房数量： </text></view>
          <view class="td_right">
            <input type="number" placeholder="请输入客房数量" bindinput="input_value" data-id="RoomNum" value="{{RoomNum}}"/>
          </view>
        </view>
        <view class="tr_view" >
          <view class="td_left"><text space="ensp">床位数量： </text></view>
          <view class="td_right">
            <input type="number" placeholder="请输入床位数量" bindinput="input_value" data-id="BedNum" value="{{BedNum}}"/>
          </view>
        </view>
        <view class="tr_view" >
          <view class="td_left"><text space="ensp">餐位数量： </text></view>
          <view class="td_right">
            <input type="number" placeholder="请输入餐位数量" bindinput="input_value" data-id="MealSum" value="{{MealSum}}"/>
          </view>
        </view>
        <view class="tr_view" >
          <view class="td_left"><text space="ensp">人数： </text></view>
          <view class="td_right">
            <input type="number" placeholder="请输入人数" bindinput="input_value" data-id="PNumber" value="{{PNumber}}"/>
          </view>
        </view>
        <view class="tr_view" >
          <view class="td_left"><text space="ensp">投资情况： </text></view>
          <view class="td_right">
            <input type="text" placeholder="请输入投资情况" bindinput="input_value" data-id="Investment" value="{{Investment}}"/>
          </view>
        </view>
      </view>
      <button bindtap="submit" style="background:#F7B267;font-size:36rpx">提交</button>
    </view>
  </swiper-item>
</swiper>